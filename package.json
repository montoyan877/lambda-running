  },
  "bin": {
    "lambda-run": "bin/lambda-run.js"
  },
  "keywords": [
    "aws",
    "lambda",
    "testing",
    "serverless",
    "debug",
    "runner",
    "running"
  ],
  "author": "Nicol√°s Montoya <montoyan877@gmail.com>",
  "license": "MIT",
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.0.0",
    "enquirer": "^2.4.1",
    "external-editor": "^3.1.0",
    "inquirer": "^7.3.3"
  },
  "optionalDependencies": {
    "tsconfig-paths": "^3.14.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.22.10",
    "@babel/core": "^7.22.10",
    "@babel/preset-env": "^7.22.10",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.6.2",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "tsconfig-paths": "^4.2.0"
  },
  "engines": {
    "node": ">=14.0.0"
